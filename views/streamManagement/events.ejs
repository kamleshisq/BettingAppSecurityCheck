<%- include("../header") %>
  <!--Container Main start-->
  <div class="dashboard-main-wraper">
  <section class="dashboard-welcome-section">
    <div class="container-fluid">
      <div class="new-head"> 
          <h3 class="main-heading">Stream Management</h3>
          <div class="form">
           
          </div>
      </div>
  </section>

  <section>
    <div class="container-fluid">
        <div class="table-data-section">
            <div class="table-heading">
                <h3>Stream Management</h3>
                <div class="rowId" data-rowid="1"></div>
                <div class="table-heading-btn">
                  
                </div>
            </div>
            <div class="data-table">
             
                <table>
                <thead>
                    <tr style="text-align: center;font-size: 11px;">
                        <th>S.No</th>
                        <th>Open Date</th>
                        <th>Event</th>
                        <th>Stream Link</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody class="new-body">
                    <%if(eventList.length > 0){%>
                    <%for(let i = 0;i<eventList.length;i++){%>
                    <%
                    var date = new Date(eventList[i].created_on)
                    %>
                    <tr data-id="<%=JSON.stringify(eventList[i])%>" id="row-<%= i + 1%>">
                    <td><%= i + 1%></td>
                    <td class="date-time"><%=date.getDate() + '-' +(date.getMonth() + 1) + '-' + date.getFullYear() + " "+ date.getHours() + ':' + date.getMinutes() +':' + date.getSeconds()%></td>
                    <td><%=eventList[i].eventName%></td>
                    <td><%=eventList[i].url%></td>
                    <td>
                        <div class="btn-group">
                            <button class="btn-filter editStrem" data-bs-toggle="modal" data-bs-target="#myModaladduser">Edit Stream</button>
                        </div>
                    </td>
                    </tr>
                    <%}%>
                    <%}else{%>
                    <tr class="empty_table"><td>No record found</td></tr>
                    <%}%>
                </tbody>
                </table>
             
            </div>
        </div>
    </div>
</section>
</div>

<div class="modal fade" id="myModaladduser" role="dialog">
  <div class="modal-dialog">
  
    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-bs-dismiss="modal">&times;</button>
      </div>
      <div class="modal-header" style="text-align: center;">
        <!-- <button type="button" class="close" data-dismiss="modal">&times;</button> -->
        <h4 class="modal-title" style="color: #fff;">Edit Stream</h4>
      </div>
      <div class="modal-body">
        <form class="form-data editStreamForm">
          <div class="row">
            <div class="col">
              <label for="">Stream Link</label>
              <input type="text" class="form-control ml0" placeholder="Stream Link" name="url">
              <input type="hidden" name="eventId">
              <input type="hidden" name="sportId">
              <input type="hidden" name="eventName">
              <input type="hidden" name="sportName">
            </div>
          </div>
          <div class="row mt-2">
            <div class="col on-off-btn-section">
              <label for="check">Status</label>
              <span class="on-off">OFF<label class="switch">
                <input type="checkbox"  name="status">
                <span class="slider round"></span>
                </label>&nbsp; ON</span>
            </div>
          </div>
          <button type="submit" class="btn-submit mt-3">Update</button>
        </form>
      </div>
    </div>
    
  </div>
</div>

    
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/apexcharts@3.40.0/dist/apexcharts.min.js"></script>
<script type="text/javascript" src="./../../js/bundle.js"></script>


</body>
    </html>
