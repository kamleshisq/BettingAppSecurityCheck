<%- include("../header") %>
  <!--Container Main start-->
<div class="dashboard-main-wraper">
  <section class="dashboard-welcome-section">
    <div class="container-fluid">
      <div class="new-head"> 
        <div class="bredcum-container">
          <ul>
            <li class="active"><a href="/admin/gamereport">Game Reports</a></li>
            <li><%=userName%></li>
          </ul>
        </div>
      
      </div>
    <%- include("../loginUserAdminsideDetails") %>
  </section>

  <section>
    <div class="container-fluid">
      <div class="table-data-section">
        <div class="table-heading">
          <div class="table-heading-btn">
          </div>
        </div>
        <div class="data-table">
          <table id="table12">
            <thead>
              <tr>
                <th>S.No</th>
                <th>Match Date</th>
                <th>Match Name</th>
                <th>Markets Count</th>
                <th>Bets</th>
                <th>Won</th>
                <th>Loss</th>
                <th>Void</th>
                <th>Profit/Loss</th>
                <th>Match Desc</th>
              </tr>
            </thead>
            <tbody class="new-body">
              <%for(let i = 0;i<games.length;i++){%>
                <% let date = new Date(games[i].eventDate)%>
                <%
                  var options = { 
                      year: 'numeric',
                      month: 'long',
                      day: 'numeric',
                      hour: 'numeric',
                      minute: 'numeric',
                      hour12: true
                  };
                  var formattedTime = date.toLocaleString('en-US', options);
                %>
              <%if(i % 2 == 0){%>
              <tr>
                <%}else{%>
                <tr>
                  <%}%>
                  <td><%=i + 1%></td>
                  <td><%=formattedTime%></td>
                  <td class="clickableelement getajaxdataclick" data-href="<%=url%>&match=<%=games[i]._id%>" data-parent="<%=games[i]._id%>"><%=games[i]._id%></td>
                  <td><%=games[i].gameCount%></td>
                  <td><%=games[i].betCount%></td>
                  <td><%=games[i].won%></td>
                  <td><%=games[i].loss%></td>
                  <td><%=games[i].void%></td>
                  <%if(games[i].returns >= 0){%>
                  <td class="green">+<%=(games[i].returns).toFixed(2)%></td>
                  <%}else{%>
                  <td class="red"><%=(games[i].returns).toFixed(2)%></td>
                  <%}%>
                  <td>-</td>
                </tr>
                <%}%>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </section>

  <div class="pageId" data-pageid="1"></div>

</div>
<%if(games.length != 0){%>
<div id="load-more" >
  <button class="load-more">Load More</button>
</div>
<%}else{%>
  <div id="load-more" style="display: none;">
    <button class="load-more">Load More</button>
  </div>
<%}%>

