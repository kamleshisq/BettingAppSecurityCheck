<%- include("../header") %>
<!--Container Main start-->
<div class="dashboard-main-wraper">
  <section class="dashboard-welcome-section">
    <div class="container-fluid">
      <div class="table-heading">
        <h3>Settelments</h3>
        <div class="form">
          <%
          var timestamp = data.date ; 
          var date = new Date(timestamp);
          var options = { 
            year: 'numeric',
            month: 'long',
            day: 'numeric',
        };
        var formattedTime = date.toLocaleString('en-US', options);
          %>
          <h4><%=data.match%> / <%=formattedTime%></h4>
        </div>
      </div>
    </div>
  </section>
    
  <!-- seling section -->
  <section class="liveMarket__risk">
    <div class="container-fluid">
      <div class="tab-data-section">
      <div class="tab end" >
        <button class="tablinks" id="defaultOpen" onclick="openCity(event, 'OPEN')">OPEN</button>
        <button class="tablinks"  onclick="openCity(event, 'MAPPED')">MAPPED</button>
        <button class="tablinks" onclick="openCity(event, 'INPROGRESS')">INPROGRESS</button>
        <button class="tablinks" onclick="openCity(event, 'SETTLED')">SETTLED</button>
        <button class="tablinks" onclick="openCity(event, 'VOIDED')">VOIDED</button>
      </div>

      <div id="OPEN" class="tabcontent">
        <section>
        <div class="row">
          <div class="data-table">
            <table id="open-market-table">
              <%if(betsEventWiseOpen.length > 0 ){%>
              <thead>
                <tr>
                  <th>S.No</th>
                  <th>Market Name</th>
                  <th>Result</th>
                  <th>Action</th>
                </tr>
              </thead>
              <tbody class="new-body">
                <%for(let i = 0; i < betsEventWiseOpen.length; i++){ %>
                <tr>
                  <td><%= i+1%></td>
                  <td><%= betsEventWiseOpen[i].marketName%></td>
                  <%if(betsEventWiseOpen[i].marketName != "Match Odds" && betsEventWiseOpen[i].marketName != "Bookmaker 0%Comm" && betsEventWiseOpen[i].marketName != "TOSS" && betsEventWiseOpen[i].marketName != "BOOKMAKER 0% COMM"){%>
                  <td>
                    <select class="selectOption" >
                      <option value="" selected></option>
                      <option value="yes">Yes</option>
                      <option value="no">No</option>
                    </select>
                  </td>
                  <%}else {%>
                  <% 
                  let option = betsEventWiseOpen[i].match.split(" v ")
                  let option1 = option[0]
                  let option2 = option[1]
                  %>
                  <td>
                    <select class="selectOption">
                      <option value="" selected></option>
                      <option value="<%=option1 %>"><%=option1 %></option>
                      <option value="<%=option2 %>"><%=option2 %></option>
                    </select>
                  </td>
                  <%}%>
                  <td>
                    <div class="btn-group">
                      <button class="voidBet" id="<%=betsEventWiseOpen[i].marketId%>"> VOID</button><button class="acceptBet" id="<%=betsEventWiseOpen[i].marketId%>"> MAP</button>
                    </div>
                  </td>
                </tr>
                <%} %>
              </tbody>
              <%}else{ %>
              <tr class="empty_table"><td>No OPEN Markets! </td></tr>
              <%}%>
            </table>
          </div>
        </div>
      </section>
      </div>
            
      <div id="INPROGRESS" class="tabcontent">
        <section>
        <div class="row">
          <div class="data-table">
            <table id="inprogress-market-table">
              <tr class="empty_table"><td>No INPROGRESS Markets! </td></tr>
            </table>
          </div>
        </div>
      </section>
      </div>

      <div id="MAPPED" class="tabcontent">
        <section>
          <div class="row">
            <div class="data-table">
              <table id="open-market-table">
                <%if(betsEventWiseMap.length > 0 ){%>
                <thead>
                  <tr>
                    <th>S.No</th>
                    <th>Market Name</th>
                    <th>Result</th>
                    <th>Action</th>
                  </tr>
                </thead>
                <tbody class="new-body">
                  <%for(let i = 0; i < betsEventWiseMap.length; i++){ %>
                  <tr>
                    <td><%= i+1%></td>
                    <td><%= betsEventWiseMap[i].marketName%></td>
                    <td><%= betsEventWiseMap[i].result%></td>
                    <td>
                      <div class="btn-group">
                        <button class="Unmap" id="<%=betsEventWiseMap[i].marketId%>"> Unmap</button>
                        <button class="Settle" id="<%=betsEventWiseMap[i].marketId%>"> Settle</button>
                        <button class="voidBet" id="<%=betsEventWiseMap[i].marketId%>"> VOID</button>
                      </div>
                    </td>
                  </tr>
                  <%} %>
                </tbody>
                <%}else{ %>
                <tr class="empty_table"><td>No MAPPED Markets! </td></tr>
                <%}%>
              </table>
            </div>
          </div>
        </section>
      </div>

      <div id="SETTLED" class="tabcontent">
        <section>
        <div class="row">
          <div class="data-table">
            <table id="settle-market-table">
              <tr class="empty_table"><td>No SETTLED Markets! </td></tr>
            </table>
          </div>
        </div>
      </section>
      </div>

      <div id="VOIDED" class="tabcontent">
        <section>
          <div class="row">
            <div class="data-table">
              <table id="open-market-table">
                <%if(betsEventWiseCancel.length > 0 ){%>
                <thead>
                  <tr>
                    <th>S.No</th>
                    <th>Market Name</th>
                    <th>Status</th>
                    <!-- <th>Action</th> -->
                  </tr>
                </thead>
                <tbody class="new-body">
                  <%for(let i = 0; i < betsEventWiseCancel.length; i++){ %>
                  <tr>
                    <td><%= i+1%></td>
                    <td><%= betsEventWiseCancel[i].marketName%></td>
                    <td>VOIDED</td>
                    <!-- <td>
                      <div class="btn-group">
                        <button class="Unmap" id="<%=betsEventWiseCancel[i].marketId%>"> Unmap</button>
                        <button class="Settle" id="<%=betsEventWiseCancel[i].marketId%>"> Settle</button>
                        <button class="voidBet" id="<%=betsEventWiseCancel[i].marketId%>"> VOID</button>
                      </div>
                    </td> -->
                  </tr>
                  <%} %>
                </tbody>
                <%}else{ %>
                <tr class="empty_table"><td>No VOIDED Markets! </td></tr>
                <%}%>
              </table>
            </div>
          </div>
        </section>
      </div>
    </div>

    </div>
  </section>
 
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/apexcharts@3.40.0/dist/apexcharts.min.js"></script>
<script type="text/javascript" src="../js/bundle.js"></script>



  <script>
        function openCity(evt, cityName) {
    var i, tabcontent, tablinks;
    tabcontent = document.getElementsByClassName("tabcontent");
    for (i = 0; i < tabcontent.length; i++) {
      tabcontent[i].style.display = "none";
    }
    tablinks = document.getElementsByClassName("tablinks");
    for (i = 0; i < tablinks.length; i++) {
      tablinks[i].className = tablinks[i].className.replace(" active", "");
    }
    document.getElementById(cityName).style.display = "block";
    evt.currentTarget.className += " active";
    
  }
  document.getElementById("defaultOpen").click();
  </script>

</body>
</html>