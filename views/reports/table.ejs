<table id="table12">
  <thead>
    <tr>
      <th>User Name</th>
      <th>Date</th>
      <th>Sport</th>
      <th>Match</th>
      <th>Market</th>
      <th>Bet On</th>
      <th>Odds</th>
      <th>Status</th>
      <th>Stake</th>
      <!-- <th>Result</th> -->
      <th>Returns</th>
      <th>Game/Round</th>
    </tr>
  </thead>
  <tbody class="new-body">
    <%if(bets.length !== 0){%>
    <% for(let i = 0; i < bets.length; i++){%>
    <% let date = new Date(bets[i].date)%>
    <%
      var options = { 
          year: 'numeric',
          month: 'long',
          day: 'numeric',
          hour: 'numeric',
          minute: 'numeric',
          hour12: true
      };
      var formattedTime = date.toLocaleString('en-US', options);
    %>
    <%if(bets[i].bettype2 === 'BACK'){%>
      <tr class="back">
    <%}else{%>
      <tr class="lay">
    <%}%>
        <td><%=bets[i].userName%></td>
        <td class="date-time"><%=formattedTime%></td>
        <%if(bets[i].match){%>
          <%if(bets[i].selectionName.includes('@')){%>
            <%
            let oddValue1 = bets[i].selectionName.split('@')[1]
            let selectionName = bets[i].selectionName.split('@')[0]
            let oddValue2 = bets[i].oddValue
            %>
            <td><%=bets[i].betType%></td>
            <td class="text-nowrap"><%=bets[i].match%></td>
            <td><%=bets[i].marketName%></td>
            <td><%=selectionName%>@<%=oddValue2%></td>
            <td><%=oddValue1%></td>
          <%}else{%>
            <td><%=bets[i].betType%></td>
            <td class="text-nowrap"><%=bets[i].match%></td>
            <td><%=bets[i].marketName%></td>
            <td><%=bets[i].selectionName%></td>
            <td><%=bets[i].oddValue%></td>
          <%}%>
        <%}else{%>
        <td>-</td>
        <td>-</td>
        <td>-</td>
        <td>-</td>
        <td>-</td>
        <%}%>
        <td><%=bets[i].status%></td>
        <td><%=bets[i].Stake%></td>
        <!-- <%if(bets[i].result){%>
        <td><%=bets[i].result%></td>
        <%}else{%>
        <td>-</td>
        <%}%> -->
        <td><%=bets[i].returns%></td>
        <td><%=bets[i].event%></td>
      </tr>
      <%}%>
    </tr>
    <%}else{%>
      <tr class="empty_table"><td>No record found</td></tr>
    <%}%>
  </tbody>
</table>