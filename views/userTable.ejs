<body>

<h2><%= title %></h2>
<button class="logOut">logout</button>
<%if(currentUser.role.authorization.includes('createDeleteUser')){%>
  <div class="popup_main">
    <button class="open_popup">Create User</button>
    <div class="popup_body">
      <div class="popup_back"></div>
        <div class="popup_contain">
          <div class="popup_close">x</div>
            <h2>Create User</h2>

            <div class="createForm">
              <form class= "login-form" id="my-form">
                <!-- <div class="imgcontainer">
                  <img src="img_avatar2.png" alt="Avatar" class="avatar">
                </div> -->
              
                <div class="container">
                  <label for="userName"><b>Username</b></label>
                  <input type="text" placeholder="Enter Username" name="userName" required id=uname>
            
                  <label for="name"><b>Name</b></label>
                  <input type="text" placeholder="Enter name" name="name" required id=name>
            
                  <label for="phoneNumber"><b>Phone Number</b></label>
                  <input type="number" name="phoneNumber" id=pNumber>
                  <br><br>
                  <label for="role">Choose a Role</label>
                    <select name="role" id="role">
                      <%for(let i = 0; i < roles.length; i++){%>
                        <option value="<%=roles[i]._id%>" ><%=roles[i].roleName%></option>
                      <%}%>
                    </select>
                  <br><br>
                  <%if(currentUser.role_type == 1){%>
                    <label for="role" >Choose a whitelabel</label>
                      <select id="whitelabel">
                        <option value="123" selected disabled hidden>select WhiteLabel</option>
                        <%for(let i = 0; i < WhiteLabel.length; i++){%>
                          <option value="<%=WhiteLabel[i].whiteLabelName%>" ><%=WhiteLabel[i].whiteLabelName%></option>
                        <%}%>
                      </select>
                      <div >
                        <input name="whiteLabel" type="text" id="for_new_whitelabel" required>
                      </div>
                  <%}%>
                  <br><br>
                  <label for="password"><b>Password</b></label>
                  <input type="password" placeholder="Enter Password" name="password" required id=password>
            
                  <label for="passwordConfirm"><b>Confirm Password</b></label>
                  <input type="password" placeholder="Enter Password" name="passwordConfirm" required id=cpsw>
            
                  <button type="submit">Login</button>
                </div>
              </form>
            </div>
                             
          </div>
    </div>
    </div>

<%}%>
<%if(currentUser.role.authorization.includes('roleController')){%>
  <button><a href="/createRole">Create Role</a></button>
  <button><a href="/updateRole">Update Role</a></button>
<%}%>
<%if(currentUser.role.authorization.includes('dashboard')){%>
  <button><a href="/dashboard">Dashboard</a></button>
<%}%>
<%if(currentUser.role.authorization.includes('userStatus')){%>
  <button><a href="/inactiveUser">inactive users</a></button>
<%}%>
<%if(currentUser.role.authorization.includes('logOutUser')){%>
  <button><a href="/loginUser">Online Users</a></button>
<%}%>
<button><a href="/changeCurrentUserPass">change password</a></button>
<button type="button" id="back" data-me='<%=JSON.stringify(me)%>'><a href='/userManagement?id=<%=me.parent_id%>'>Back</a></button>
<%if(currentUser.role_type == 1){%>
  <select name="WhiteLabel" id="WhiteLabel" class="WhiteLabel">
    <option value="" selected >select WhiteLabel</option>
    <%for(let i = 0 ; i < WhiteLabel.length; i++){%>
      <option value="<%=WhiteLabel[i].whiteLabelName%>"><%=WhiteLabel[i].whiteLabelName%></option>
    <%}%>
  </select>
<%}%>
<select name="ROLEselect" id="ROLEselect" class="ROLEselect">
  <option value="" selected >Select Role</option>
  <%for(let i = 0 ; i < roles.length; i++){%>
    <option value="<%=roles[i].role_type%>"><%=roles[i].roleName%></option>
  <%}%>
</select>
<div class="Search-box">
  Search:<input type="text" placeholder="search user" id="searchUser" class="searchUser">
  <button><a href="/userManagement">Refresh</a></button>
  <!-- <ul id="myMenu" class="dropdown-content">
  </ul> -->
</div>
<div id="table1">

  <table style="width:100%" class="TABLE">
    <tr class="HeadRow">
      <th>S.No</th>
      <th>User Name</th>
      <th>White lable</th>
      <th>Credit Reference</th>
      <th>Balance</th>
      <th>Available Balance</th>
      <th>Downlevel Balance</th>
      <th>Client P/L</th>
      <th>Upline P/L</th>
      <th>Exposure</th>
      <th>Exposure limit</th>
      <th>Lifetime Credit</th>
      <th>Lifetime Deposite</th>
      <th>Action</th>
    </tr>
      <% for(let i = 0; i < users.length; i++){ %>
        <tr class="UserRow" id='<%=i + 1%>'>
            <td><%= i + 1 %></td>
              <td class="getOwnChild" data-id='<%=JSON.stringify(users[i])%>'>
                <%if(users[i].roleName !== 'user'){%>
                <a href='/userManagement?id=<%=users[i]._id%>'><%= users[i].userName%></a>
                <%}else{%>
                  <%= users[i].userName%>
                <%}%>
              </td>
            <td><%= users[i].whiteLabel%></td>
            <td><%= users[i].creditReference%></td>
            <td><%= users[i].balance%></td>
            <td><%= users[i].availableBalance%></td>
            <td><%= users[i].downlineBalance%></td>
            <td><%= users[i].clientPL%></td>
            <td><%= users[i].uplinePL%></td>
            <td><%= users[i].exposure%></td>
            <td><%= users[i].exposureLimit%></td>
            <td><%= users[i].lifeTimeCredit%></td>
            <td><%= users[i].lifeTimeDeposit%></td>
            <td>
              <%if(currentUser.role.authorization.includes('userStatus')){%>
                <button class="userStatus" id="<%=users[i]._id %>" data-myval="<%=JSON.stringify(users[i])%>">U/S</button>
              <%}%>
              <%if(currentUser.role.authorization.includes('betLockAndUnloack')){%>
                <button class="betLockStatus" id="<%=users[i]._id %>" data-myval="<%=JSON.stringify(users[i])%>">BetLock status</button>
              <%}%>
              <%if(currentUser.role.authorization.includes('changeUserPassword')){%>
                <div class="popup_main">
                  <!-- <button class="open_popup">Open Pop Up 1</button> -->
                  <button class="open_popup">change password</button>

                  <div class="popup_body">
                    <div class="popup_back"></div>
                      <div class="popup_contain">
                        <div class="popup_close">x</div>
                          <h2>reset password</h2>

                          <div class="ResetFORM">
                            <form class= "passReset-form" enctype="multipart/form-data" >
                              <!-- <div class="imgcontainer">
                                <img src="img_avatar2.png" alt="Avatar" class="avatar">
                              </div> -->
                            
                              <div class="container">
                                <input type="hidden" name="id" value=<%=users[i]._id%>>
                                <label for="npsw"><b>New Password</b></label>
                                <input type="password" placeholder="Enter Password" name="password" required >
          
                                <label for="cpsw"><b>Confirm Password</b></label>
                                <input type="password" placeholder="Enter Password" name="passwordConfirm" required >
                                    
                                <button type="submit">Submit</button>
                              </div>
                            </form>
                          </div>                      
                        </div>
                  </div>
                  </div>

              <%}%>
              <%if(currentUser.role.authorization.includes('accountControl')){%>
                <button ><a href="/accountStatement?id=<%=users[i]._id %>">A/S</a></button>
                <div class="popup_main">
                  <button class="open_popup">D/C</button>
                  <div class="popup_body">
                    <div class="popup_back"></div>
                      <div class="popup_contain">
                        <div class="popup_close">x</div>
                          <h2>Account</h2>

                          <div class="AccForm">
                            <form class= "acc-form" >
                              <!-- <div class="imgcontainer">
                                <img src="img_avatar2.png" alt="Avatar" class="avatar">
                              </div> -->
                            
                              <div class="container">
                          
                                <label for="amount"><b>Amount</b></label>
                                <input type="number" name="amount" required >
                                <input type="hidden" name="id" value='<%=users[i]._id%>'>
                                <label for="type"><b>Select</b></label>
                                <select name="type">
                                  <option value=deposit >Deposit</option>
                                  <option value=withdrawl >withdrawl</option>
                                </select>
                                <button type="submit">Submit</button>
                              </div>
                            </form>
                          </div>
                      </div>
                  </div>
                </div>
              <%}%>
              <%if(currentUser.role.authorization.includes('userName')){%>
