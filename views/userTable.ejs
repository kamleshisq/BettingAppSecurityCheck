                  <!-- <button class="open_popup">Open Pop Up 1</button> -->
                  <button class="open_popup">Details</button>
                  <!-- <button ><a href="/updateUser?id=<%=users[i]._id %>">Details</a></button> -->
                  <div class="popup_body">
                    <div class="popup_back"></div>
                      <div class="popup_contain">
                        <div class="popup_close">x</div>
                          <h2>Update User</h2>

                          <div class="editForm">
                            <form class= "edit-form">
                              <!-- <div class="imgcontainer">
                                <img src="img_avatar2.png" alt="Avatar" class="avatar">
                              </div> -->
                            
                              <div class="container" >
                                <label for="uname"><b>Username</b></label>
                                <input type="text" placeholder="Enter Username" name="userName" required  value=<%=users[i].userName%>>
                                <input type="hidden"  name="id" value=<%=users[i]._id%>>
                          
                                <label for="name"><b>Name</b></label>
                                <input type="text" placeholder="Enter name" name="name" required value=<%=users[i].name%>>
                          
                                <select name="role" >
                                  <%for(let j=0;j<roles.length; j++) {%>
                                    <% if(users[i].role_type===roles[j].role_type){ %>
                                      <option value=<%=roles[j]._id%> selected><%=roles[j].roleName%></option>
                                    <%} else{%>
                                      <option value=<%=roles[j]._id%> ><%=roles[j].roleName%></option>
                                  <%}}%>
                          
                                </select>
                          
                                <button type="submit">Save</button>
                              </div>
                            </form>
                          </div>
                        
                      </div>
                  </div>
                </div>
              <%}%>
            </td>
        </tr>
       <%}%>    
  </table>
